# ==============================================
# OPENROUTER AI PROVIDER (Recomendado)
# ==============================================
# OpenRouter agrega múltiples proveedores LLM con precios competitivos
# Obtén tu API key en: https://openrouter.ai/keys

OPENROUTER_API_KEY=sk-or-v1-your-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3.5-sonnet

# ==============================================
# OTROS PROVEEDORES DE IA (Opcionales)
# ==============================================

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=
OPENAI_BASE_URL=
OPENAI_DEFAULT_MODEL=gpt-4-turbo-preview

# Anthropic (https://console.anthropic.com/)
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=
ANTHROPIC_DEFAULT_MODEL=claude-3-sonnet-20240229

# Google AI (https://makersuite.google.com/app/apikey)
GOOGLE_API_KEY=
GOOGLE_BASE_URL=
GOOGLE_DEFAULT_MODEL=gemini-2.5-flash

# DeepSeek (https://platform.deepseek.com/)
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_DEFAULT_MODEL=deepseek-chat

# ==============================================
# CONFIGURACIÓN GENERAL DE IA
# ==============================================

# Proveedor por defecto (openrouter, openai, anthropic, google, deepseek)
AI_DEFAULT_PROVIDER=openrouter

# Modelo por defecto
AI_DEFAULT_MODEL=anthropic/claude-3.5-sonnet

# Proveedores de fallback (separados por coma)
AI_FALLBACK_PROVIDERS=google,deepseek,openai

# URL pública de tu aplicación (para OpenRouter tracking)
NEXT_PUBLIC_APP_URL=https://opttius.com
